<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recyclerview_IMG_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:src="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/recyclerview_IMG_poster"
        android:layout_alignTop="@id/recyclerview_IMG_poster"
        android:layout_alignBottom="@id/recyclerview_IMG_poster"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recyclerview_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="poster"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/recyclerview_LBL_genre"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:text="horror"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/recyclerview_LBL_year"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:text="2022"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/recyclerview_LBL_rate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:text="9.8"
            android:layout_weight="1"
            />


    </LinearLayout>






</RelativeLayout>